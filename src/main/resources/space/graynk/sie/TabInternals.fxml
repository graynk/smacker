<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.*?>
<?import space.graynk.sie.gui.ZoomableScrollPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="space.graynk.sie.TabInternalsController">
  <left>
    <TitledPane animated="false" collapsible="false" text="Tools"
                BorderPane.alignment="TOP_CENTER">
      <ToolBar orientation="VERTICAL">
        <Spinner fx:id="textHeightSpinner"/>
        <Spinner fx:id="rowsSpinner"/>
      </ToolBar>
    </TitledPane>
  </left>
  <center>
    <SplitPane>
      <ZoomableScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" pannable="true">
        <StackPane>
          <ImageView fx:id="imageView" preserveRatio="true" onMousePressed="#onMousePressed" onMouseDragged="#onMouseDragged" onMouseReleased="#onMouseReleased"/>
          <Canvas fx:id="toolCanvas" onMouseEntered="#onToolEntered" onMouseExited="#onToolExited" width="500" height="500"/>
        </StackPane>
      </ZoomableScrollPane>
      <StackPane fx:id="fullStickerPane" onScroll="#onStickerPaneScroll">
        <ImageView fx:id="stickerImageView" preserveRatio="true" onMousePressed="#onStickerPressed" onMouseDragged="#onStickerDragged" onScroll="#onStickerScroll"/>
        <Canvas fx:id="textCanvas" onMouseEntered="#onToolEntered" onMouseExited="#onToolExited" width="512" height="512" mouseTransparent="true"/>
      </StackPane>
    </SplitPane>
  </center>
  <right>
    <TitledPane animated="false" collapsible="false" prefWidth="300.0" text="Layers"
                BorderPane.alignment="TOP_CENTER">
      <ListView fx:id="layers"/>
    </TitledPane>
  </right>
</BorderPane>
