<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.*?>
<?import space.graynk.sie.gui.ZoomableScrollPane?>
<?import javafx.scene.control.ScrollPane?>
<BorderPane xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="space.graynk.sie.TabInternalsController">
  <left>
    <TitledPane animated="false" collapsible="false" text="Tools"
                BorderPane.alignment="TOP_CENTER">
      <ToolBar orientation="VERTICAL">
        <Spinner fx:id="textHeightSpinner"/>
        <Spinner fx:id="rowsSpinner"/>
      </ToolBar>
    </TitledPane>
  </left>
  <center>
    <SplitPane>
      <ZoomableScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" pannable="true">
        <StackPane>
          <StackPane fx:id="stackPane">
            <Canvas fx:id="backgroundCanvas" height="600.0" width="600.0"
                    onMousePressed="#onMousePressed" onMouseDragged="#onMouseDragged" onMouseReleased="#onMouseReleased"/>
          </StackPane>
          <Canvas fx:id="toolCanvas" onMouseEntered="#onToolEntered" onMouseExited="#onToolExited" width="500" height="500"/>
        </StackPane>
      </ZoomableScrollPane>
      <ScrollPane fx:id="stickerPane" fitToHeight="true" fitToWidth="true" pannable="true">
        <StackPane>
          <StackPane fx:id="stackStickerPane">
            <Canvas fx:id="backgroundStickerCanvas" height="512.0" width="512.0"
                    onMousePressed="#onMousePressed" onMouseDragged="#onMouseDragged" onMouseReleased="#onMouseReleased"/>
          </StackPane>
          <Canvas fx:id="textCanvas" onMouseEntered="#onToolEntered" onMouseExited="#onToolExited" width="512" height="512"/>
        </StackPane>
      </ScrollPane>
    </SplitPane>
  </center>
</BorderPane>
